# Logging level
LOG_LEVEL="INFO"

# OpenAI API Key
OPENAI_API_KEY="your_openai_api_key_here"

# Paths for storing data
LISTING_OUTPUT_PATH="./data/job_listings"
UPLOADED_RESUME_PATH="./data/uploaded_resumes"
GENERATED_RESUME_PATH="./data/generated_resumes"
UPLOADED_CL_PATH="./data/uploaded_cls"
GENERATED_CL_PATH="./data/generated_cls"

# Chrome version (ensure this matches the installed version)
CHROME_VERSION="your_chrome_version_here"

# WebDriver (chrome or safari)
WEBDRIVER="chrome"

# Prompt names for various tasks from config/prompts.json
JOB_LISTING_PROMPT_NAME="job_listing_extractor"
RESUME_PROMPT_NAME="resume_extractor"
CL_PROMPT_NAME="cl_keyword_extractor"

# Transformer model for semantic similarity
TRANSFORMER_MODEL="sentence-transformers/all-mpnet-base-v2"

# Chat model for generating text content
CHAT_MODEL="gpt-4"

# Thresholds for similarity evaluation
COSINE_THRESHOLD="0.50"
SOFT_COSINE_THRESHOLD="0.55"

# Number of bullets and words to include in generated content
N_PRIMARY_BULLETS="5"
N_SECONDARY_BULLETS="1"
N_CORE_WORDS="10"
N_TECHNICAL_WORDS="15"
